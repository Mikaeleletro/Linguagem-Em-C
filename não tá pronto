#include <stdio.h> 
#include <math.h>
int main() { 
    int p, j, c, z;
    float m;
    printf("Qual o periodo de investimentos?");
    scanf("%d", &p);
    printf("qual o Juros?");
    scanf("%d", &j);
    j++;
    printf("qual o capital inicial?");
    scanf("%d", &c);
    for(z = 1; z >= p; z++){
        m = c * pow((j / 100),p);
    }
    printf("mes %d: %f", z, m);
}
